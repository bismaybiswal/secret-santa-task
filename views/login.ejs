<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body>
  <% include partials/menu %>

  <div class="container-fluid bg-3 text-center">
    <div class="row">
      <div class="modal-dialog modal-login">
        <div id="success-notify" class="alert alert-success" style="display: none">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong id="success-msg"></strong>
        </div>
        <div id="error-notify" class="alert alert-danger" style="display: none">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong id="error-msg"></strong>
        </div>
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title"> <%= page %></h4>
          </div>
          <div class="modal-body">
            <form action="#" method="post">
              <div class="form-group">
                <i class="fa fa-user"></i>
                <input id="username" type="text" class="form-control" placeholder="Username" required="required">
              </div>
              <div class="form-group">
                <i class="fa fa-lock"></i>
                <input id="password" type="password" class="form-control" placeholder="Password" required="required">
              </div>
              <div class="form-group">
                <button type="button" id="loginBtn" class="btn btn-primary btn-block btn-lg">Login</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>

</body>
<% include partials/script %>
<script src="./javascripts/login-service.js"></script>

</html>